{
  "id": "touchline",
  "name": {
    "en": "Thermostat",
    "no": "Termostat"
  },
  "class": "thermostat",
  "capabilities": [
    "onoff",
    "target_temperature",
    "measure_temperature",
    "thermostat_mode"
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": 5,
      "max": 40,
      "step": 0.5
    }
  },
  "icon": "{{driverAssetsPath}}/icon.svg",
  "images": {
    "large": "/drivers/touchline/assets/images/large.png",
    "small": "/drivers/touchline/assets/images/small.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}